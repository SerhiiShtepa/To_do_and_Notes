@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-6 border-end fs-3">
        <div class="d-flex justify-content-between">
            <button class="btn btn-primary d-inline-flex fs-5 mt-2" data-bs-toggle="modal" data-bs-target="#newTaskModal">Нова задача</button>
            <div class="modal fade" id="newTaskModal" tabindex="-1" aria-labelledby="newTaskModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Нова задача</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрити"></button>
                        </div>
                        <div class="modal-body">
                            <div class="card p-2 mt-2">
                                <form method="post">
                                    <div class="form-check">
                                        <div class="card-title mb-3">
                                            <input type="text" asp-for="NewTask.Title" class="form-control" placeholder="Назва">
                                        </div>
                                        <div class="card-text mb-3">
                                            <input type="text" asp-for="NewTask.Description" class="form-control" placeholder="Я хочу зробити ...">
                                        </div>
                                        @*<input type="checkbox" value="@Model.newTaskDescription" class="form-control" id="inputIsCompleted">*@

                                        <button type="submit" class="btn btn-primary">Додати</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @foreach(var task in Model.Tasks)
        {
            <div class="card p-2 mt-2">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="flexRadioDefault" id="flexRadioDefault2" checked>
                    <div class="card-title fs-4 mb-0">@task.Title</div>
                    <div class="card-text fs-5 ms-1">@task.Description</div>
                </div>
            </div>
        }
    </div>

    <div class="col-6">
        <div class="d-flex justify-content-between">
            <button class="btn btn-primary d-inline-flex fs-5 mt-2">Нова нотатка</button>
            <div>
                <input class="form-check-input fs-2" type="checkbox" id="inlineCheckbox2" value="option2">
                <input class="form-check-input fs-2" type="checkbox" id="inlineCheckbox2" value="option2">
            </div>
        </div>

